<div class="col-md-4">
	<%= form_for [:admin, @category, @app] do |f| %>

		<div class="form-group">
			<%= f.label :thumbnail %>
			<%= f.text_field :thumbnail, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label :name %>
			<%= f.text_field :name, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label :link, "Link" %>
			<%= f.text_field :link, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label :operatingsystem_id, "Operating system" %>
			<%= f.select :operatingsystem_id, options_for_select([ [@operatingsystems.find(1).name, @operatingsystems.find(1).id], [@operatingsystems.find(2).name, @operatingsystems.find(2).id], [@operatingsystems.find(3).name, @operatingsystems.find(3).id]  ]), class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.submit "Submit", class: "btn btn-success" %>
			<%= link_to "Cancel", admin_category_apps_path(@app.category_id), class: "btn btn-danger" %>
		</div>

	<% end %>
</div>