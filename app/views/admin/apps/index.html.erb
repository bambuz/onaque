<h1>Onaque - Admin - <%= @category.name %> - Apps</h1>

<p><%= link_to "Add new app", new_admin_category_app_path, class: "btn btn-primary" %> <%= link_to "Back to categories", admin_categories_path, class: "btn btn-danger" %></p>

<table class="table">
	<% @apps.each do |app| %>
		<tr>
			<td><%= image_tag app.thumbnail %> <%= app.name %></td>
			<td><%= link_to "Link", app.link %></td>
			<td><%= link_to "Edit", edit_admin_app_path(app) %> | <%= link_to "Delete", admin_app_path(app), method: "delete" %></td>
		</tr>
	<% end %>
</table>