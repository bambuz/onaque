<div class="col-md-4">
	<%= form_for [:admin, @category] do |f| %>

		<div class="form-group">
			<%= f.label :name %>
			<%= f.text_field :name, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.submit "Submit", class: "btn btn-success" %>
			<%= link_to "Cancel", admin_categories_url, class: "btn btn-danger" %>
		</div>

	<% end %>
</div>