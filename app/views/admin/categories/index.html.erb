<h1>Onaque - Admin - Categories</h1>

<p><%= link_to "Add new category", new_admin_category_path, class: "btn btn-primary" %> <%= link_to "OS management", admin_operatingsystems_path, class: "btn btn-primary" %></p>

<table class="table">
	<% @categories.each do |category| %>
		<tr>
			<td><%= category.name %></td>
			<td><%= link_to "Apps", admin_category_apps_path(category), class: "btn btn-warning" %></td>
			<td><%= link_to "Edit", edit_admin_category_path(category), class: "btn btn-success" %> <%= link_to "Delete", admin_category_path(category), method: "delete", class: "btn btn-danger" %></td>
		</tr>
	<% end %>
</table>